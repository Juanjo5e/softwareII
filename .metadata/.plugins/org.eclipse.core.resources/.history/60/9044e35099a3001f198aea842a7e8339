package co.edu.uco.deviuco.usuarios.application.primaryports.dto.sede;

import java.util.UUID;

import co.edu.uco.deviuco.usuarios.crosscutting.helpers.TextHelper;
import co.edu.uco.deviuco.usuarios.crosscutting.helpers.UUIDHelper;

public class RetrieveSedeDTO {
	private UUID id; 
	private String name;
	private CiudadDTO ciudad;
	private TipoSedeDTO tipoSede;
	
	public RetrieveSedeDTO() {
		setId(UUIDHelper.getDefault());
		setName(TextHelper.EMPTY);
		setCiudad(ciudad);
	}
	
	
	
	public RetrieveSedeDTO(UUID id, String name, CiudadDTO ciudad, TipoSedeDTO tipoSede) {
		setId(id);
		setName(name);
		setCountry(country);
	}
	
	public static RetrieveSedeDTO create () {
		return new RetrieveSedeDTO();
	}
	
	public static  RetrieveSedeDTO create(UUID id, String name, CiudadDTO ciudad, TipoSedeDTO tipoSede) {
		return new RetrieveSedeDTO(id, name, ciudad, tipoSede);
		
	}


	public UUID getId() {
		return id;
	}



	public void setId(UUID id) {
		this.id = UUIDHelper.getDefault(id, UUIDHelper.getDefault());
	}



	public String getName() {
		return name;
	}



	public void setName(String name) {
		this.name = TextHelper.applyTrim(name);
	}

	public CiudadDTO getCountry() {
		return ciudad;
	}



	public void setCiudad(CiudadDTO ciudad) {
		this.ciudad = ciudad;
	}
	
	public TipoSedeDTO getTipoSede() {
		return tipoSede;
	}



	public void setTipoSede(TipoSedeDTO tipoSede) {
		this.tipoSede= tipoSede;
	}
	

}
