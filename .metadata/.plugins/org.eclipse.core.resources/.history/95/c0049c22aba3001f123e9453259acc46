package co.edu.uco.deviuco.usuarios.application.primaryports.dto.sede;

import java.util.UUID;

import co.edu.uco.deviuco.usuarios.crosscutting.helpers.TextHelper;
import co.edu.uco.deviuco.usuarios.crosscutting.helpers.UUIDHelper;

public class CountryDTO {
	
	private UUID id;
	private String nombre;
	
	
	public CountryDTO(final UUID id, final String nombre) {
		setId(id);
		setNombre(nombre);
	}
	
	public static CountryDTO create(final UUID id, final String nombre) {
		return new CountryDTO(id, nombre);
	}

	public UUID getId() {
		return id;
	}

	public void setId(UUID id) {
		this.id = UUIDHelper.getDefault(id, UUIDHelper.getDefault());
	}

	public String getNombre() {
		return nombre;
	}

	public void setNombre(String name) {
		this.nombre = TextHelper.applyTrim(nombre);		
	}
	
	

}
